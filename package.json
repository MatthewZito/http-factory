{
  "name": "http-factory",
  "version": "1.0.0",
  "description": "A factory wrapper for Axios http clients",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "npm run mock:reset && rimraf ./coverage",
    "lint": "eslint ./ --no-fix",
    "lint:fix": "eslint ./ --fix",
    "test": "npm run mock:db && NODE_OPTIONS='--experimental-vm-modules' jest && npm run clean",
    "test:mon": "npm run mock:db && NODE_OPTIONS='--experimental-vm-modules' jest --watch _tests_.* && npm run clean",
    "prebuild": "rimraf ./dist",
    "mock:db": "json-server mock/db.json &",
    "mock:reset": "chmod -R u+x ./scripts && ./scripts/setup_db.sh",
    "prerelease": "npm pack && tar -xvzf *.tgz && rimraf package *.tgz"
  },
  "author": "Matthew Zito <matthewtzito@gmail.com> (goldmund)",
  "license": "MIT",
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {},
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ],
    "testRegex": ".test.js$",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  },
  "lint-staged": {
    "lib/**/*.js": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "axios": "0.21.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.21.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "json-server": "0.16.3",
    "lint-staged": "10.5.4",
    "rimraf": "3.0.2"
  }
}
